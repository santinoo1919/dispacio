{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Jest needs ES modules or CommonJS
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // Keep paths mapping for @/* imports
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.test.ts",
    "**/__tests__/**/*.ts",
    "lib/**/*.ts",
    "types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".expo",
    "ios",
    "android",
    "web-build"
  ]
}

